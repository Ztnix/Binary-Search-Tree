{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": ["airbnb-base", "prettier"],

  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "no-unused-vars": 1,
    "prefer-const": 0,
    "max-classes-per-file": 0,
    "class-methods-use-this": 0,
    "no-use-before-define": 0,
    "no-param-reassign": 0,
    "consistent-return": 0,
    "no-plusplus": 0
  }
}
